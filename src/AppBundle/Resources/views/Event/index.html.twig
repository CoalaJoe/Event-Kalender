{% extends '@App/base.html.twig' %}

{% block body -%}
<main>
    <div class="container">
        <h1>Veranstaltungs Liste</h1>

        <table class="records_list table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Besetzung</th>
                    <th>Beschreibung</th>
                    <th>Datum</th>
                    <th>Dauer</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('api_event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.cast }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.duration }}</td>
                    <td>
                        <a href="{{ path('api_event_show', { 'id': entity.id }) }}" class="btn btn-default">Anzeigen</a>
                        <a href="{{ path('api_event_edit', { 'id': entity.id }) }}" class="btn btn-default">Bearbeiten</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('api_event_new') }}" class="btn btn-default">Neue Veranstaltung erstellen</a>
    </div>
</main>
{% endblock %}