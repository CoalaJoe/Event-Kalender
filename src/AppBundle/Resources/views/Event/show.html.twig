{% extends '@App/base.html.twig' %}

{% block body -%}
<main>
    <div class="container">
        <h1>Veranstaltung</h1>

        <table class="record_properties table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Besetzung</th>
                    <td>{{ entity.cast }}</td>
                </tr>
                <tr>
                    <th>Beschreibung</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ entity.genre }}</td>
                </tr>
                <tr>
                    <th>Datum</th>
                    <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Dauer</th>
                    <td>{{ entity.duration }}</td>
                </tr>
                <tr>
                    <th>Bild</th>
                    <td>{{ entity.image }}</td>
                </tr>
                <tr>
                    <th>Bildbeschreibung</th>
                    <td>{{ entity.imageDescription }}</td>
                </tr>
                <tr>
                    <th>Preisgruppen</th>
                    <td>{% for priceClass in entity.priceClasses %}{{ priceClass }} <br/>{% endfor %}</td>
                </tr>
                <tr>
                    <th>Link</th>
                    <td>{{ entity.link }}</td>
                </tr>
                <tr>
                    <th>Linkbeschreibung</th>
                    <td>{{ entity.linkDescription }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('api_event') }}" class="btn btn-default">Zur√ºck zur Liste</a>
        <a href="{{ path('api_event_edit', { 'id': entity.id }) }}" class="btn btn-default">Bearbeiten</a>
        {{ form(delete_form) }}
    </div>
</main>
{% endblock %}
