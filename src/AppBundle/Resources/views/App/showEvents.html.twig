{% extends '@App/base.html.twig' %}

{% block body %}
    <main>
        <div class="container">
            <h1>Veranstaltungen</h1>
            <div class="events">
                <div class="row">
                    {% for event in events %}
                    <div class="col-md-6">
                        <div class="event">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="/uploads/documents/{{ event.image }}" title="{{ event.imageDescription }}" class="event-image"/>
                                    {% if event.cast is defined and event.cast is not empty %}
                                    <b>Besetzung:</b><br/><span>{{ event.cast }}</span>
                                    {% endif %}
                                </div>
                                <div class="col-md-8">
                                    <h1>{{ event.name }} <small>{{ event.genre }}</small></h1>
                                    <span class="small">{{ event.date|date("F jS Y \\u\\m H:i \\U\\h\\r") }} ({{event.duration}} Minuten)</span><br/>
                                    {% if event.link is defined and event.link is not empty %}
                                    <span>Infos unter: <a href="{{ event.link }}" title="{{ event.linkDescription | default("") }}" target="_blank">{{ event.link }}</a></span><br/>
                                    {% endif %}
                                    <p style="margin-top: 5px;">{{ event.description }}</p>
                                    {% for priceClass in event.priceClasses %}
                                        {{ priceClass }}<br/>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}

