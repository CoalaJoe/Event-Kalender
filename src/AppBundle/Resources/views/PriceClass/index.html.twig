{% extends '@App/base.html.twig' %}

{% block body %}
<main>
    <div class="container">
        <h1>Preisgruppen Liste</h1>

        <table class="records_list table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Preis</th>
                    <th>Aktion</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('api_priceClass_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.price }}</td>
                    <td>
                        <a href="{{ path('api_priceClass_show', { 'id': entity.id }) }}" class="btn btn-default">Anzeigen</a>
                        <a href="{{ path('api_priceClass_edit', { 'id': entity.id }) }}" class="btn btn-default">Bearbeiten</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('api_priceClass_new') }}" class="btn btn-default">Neue Preisgruppe erstellen</a>
    </div>
</main>
{% endblock %}